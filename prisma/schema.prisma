generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model RatingUser {
id Int @id @default(autoincrement())
username String 
email String 
password String?

auths AuthProvider[]
}

model Comment {
id Int @id @default(autoincrement())
random_name String
prepared_meal_id Int 
comment_added DateTime
comment_content String
relation_meal Rating @relation(fields: [prepared_meal_id], references: [id])
}

enum AuthProviderType {
  MICROSOFT
  GOOGLE
  FACEBOOK
  APPLE
}

model AuthProvider {
id Int @id @default(autoincrement())
userId Int
provider AuthProviderType @unique
userProviderId String @unique
relation_user RatingUser @relation(fields: [userId], references: [id])
}

model Meal {
id Int @id @default(autoincrement())
name String 
imageUrl String 

prepared_meals PreparedMeal[]
}

model PreparedMeal {
id Int @id @default(autoincrement())
mealId Int
averageRating Float
averageTemperature Float
relation_meal Meal @relation(fields: [mealId], references: [id])

ratings Rating[]
}

model Rating {
id Int @id @default(autoincrement())
preparedMealId Int @unique
amount_of_meal_rating Int 
acceptable_cost_raise Float @default(0.0)

comments Comment[]
preparedMeal PreparedMeal @relation(fields: [preparedMealId], references: [id])
}